// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  name     String
  email    String  @unique
  password String
  image    String?
}

model Fixture {
  fixture_id   Int      @id
  start_time   DateTime
  country_name String
  competition  String
  home         String
  away         String
  odds         Odd[]
}

model Bookmaker {
  bookmaker_id Int    @id
  name         String
  odds         Odd[]
}

model Odd {
  id                Int       @id @default(autoincrement())
  bookmaker         Bookmaker @relation(fields: [bookmaker_id], references: [bookmaker_id])
  bookmaker_id      Int
  fixture           Fixture   @relation(fields: [fixture_id], references: [fixture_id])
  fixture_id        Int
  timestamp         DateTime
  market_parameters Float?
  odds_type         Int
  price_names       String[]
  prices            Float[]
}
